<h2>Личный кабинет</h2>

{{#if card}}
<div class="card">
  <h3>Ваша карточка:</h3>
  <p><b>Описание:</b></p>
  <p class="cardDescription">{{card.about}}</p>
  <p><b>Куда отправлять:</b></p>
  <p class="cardLocation">{{card.location}}</p>
  {{#if card.giver_id}}
  {{else}}
  <p><a href="" class="updBtn">Редактировать карточку</a></p>
  <p><a href="" class="delBtn">Удалить карточку</a></p>
  {{/if}}
</div>
{{else}}
<form name="js-create-card" class="js-create-card" action="/lk" method="POST">
  <h3>Создать карточку</h3>
  <input type="text" name="aboutInput" placeholder="Что хотите получить?" minlength="2" required>
  <br><br>
  <input type="text" name="locationInput" placeholder="Куда отправить подарок?" minlength="2" required>
  <br><br>
  <button type="submit" class="create-card-btn">Создать карточку</button>
</form>
{{/if}}
{{#if card.giver_id}}
  <div class="card">
  <h3>Карточка кому дарить</h3>
  <p><b>Описание:</b></p>
  <p class="cardDescription">{{cardGiver.about}}</p>
  <p><b>Куда отправлять:</b></p>
  <p class="cardLocation">{{cardGiver.location}}</p>
</div>
{{/if}}

<div class="editCard">
  <h3>Редактировать карточку</h3>
  <form action="/lk" method="PUT" name="editForm" class="editForm">
    <input type="text" name="editAboutInput" class="editAboutInput" placeholder="Изменить описание" minlength="2" required>
    <br><br>
    <input type="text" name="editLocInput" class="editLocInput" placeholder="Изменить локацию" minlength="2" required>
    <br><br>
    <button type="submit" class="edit-card-btn">Изменить карточку</button>
  </form>
</div>

<div class="alertLk">
  <h3 class="alertMsgLk"></h3>
  <button class="closeBtnLk">Закрыть</button>
</div>